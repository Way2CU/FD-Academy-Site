<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">

			<a 
				href="Language::getText('pay_pal_link')"
				cms:eval="href"
				class="fixed"
				>
				<cms:text constant="sign_now2"/>
			</a>

			<div class="menu">
				
				<img 
					src="_BASEURL.'/site/images/logo-update-upgrade.svg'"  
					alt="logo-update-upgrade"
					class="logo_event"
					cms:eval="src"
					/>

				<nav>
					<a href="#"><cms:text constant="menu_entry"/></a>
					<a href="#"><cms:text constant="menu_lectures"/></a>
					<a href="#"><cms:text constant="menu_lecturers"/></a>
					<a href="#"><cms:text constant="menu_program"/></a>
					<a href="#"><cms:text constant="menu_price"/></a>
					<a href="#"><cms:text constant="menu_map"/></a>		
				</nav>

				<img 
					src="_BASEURL.'/site/images/logo-fialkov-digital.svg'"  
					alt="logo-fialkov-digital"
					class="logo"
					cms:eval="src"
					/>
			</div>

			<header>

				<img 
					src="_BASEURL.'/site/images/logo-fialkov-digital.svg'"  
					alt="logo-fialkov-digital"
					class="logo"
					cms:eval="src"
					/>
					
				<cms:module
					name="articles"
					action="show"
					text_id="header_article"
					template="parts/article.xml"
					/>

				<a 
					href="Language::getText('pay_pal_link')"
					cms:eval="href"
					class="sign_now"
					>
					<cms:text constant="sign_now"/>
				</a>

			</header>

			<section class="about">
				
				<cms:module
					name="articles"
					action="show"
					text_id="about_article"
					template="parts/article.xml"
					/>	

				
			</section>

			<section class="lectures">

				<h2><cms:text constant="campaign"/></h2>
				
				<article>

					<cms:module
						name="articles"
						action="show"
						text_id="carousale"
						template="parts/article.xml"
						/>
				</article>

				<article>

					<cms:module
						name="articles"
						action="show"
						text_id="instagram"
						template="parts/article.xml"
						/>
				</article>

				<article>

					<cms:module
						name="articles"
						action="show"
						text_id="leads"
						template="parts/article.xml"
						/>
				</article>

			</section>

			<section class="martzim">

				<cms:module
					name="gallery"
					action="show_group"
					group="lecturers"
					template="parts/gallery_group.xml"
					cms:eval="group"
					/>
			</section>

			<img 
				src="_BASEURL.'/site/images/top-corner.svg'" 
				alt=""
				class="seperator"
				cms:eval="src"	
				/>

			<section class="program">
				
				<cms:module
					name="articles"
					action="show_group"
					text_id="program"
					template="parts/group_article.xml"
				/>

			</section>

			<img 
				src="_BASEURL.'/site/images/bottom-corner.svg'" 
				alt=""
				class="seperator"
				cms:eval="src"	
				/>

			<section class="price">

				<h2><cms:text constant="price_label"/></h2>

				<cms:module
					name="articles"
					action="show"
					text_id="price"
					template="parts/article_price.xml"
					/>

				<a 
					href="Language::getText('pay_pal_link')"
					cms:eval="href"
					class="sign_now"
					>
					<cms:text constant="buy_now_label"/>
				</a>	

				<cms:module
					name="articles"
					action="show"
					text_id="who_is_it_for"
					template="parts/article_price.xml"
					/>

				<cms:module
					name="gallery"
					action="show_group"
					text_id="company"
					template="parts/gallery_group_company.xml"
					cms:eval="text_id"
					/>	
				
			</section>

			<img 
				src="_BASEURL.'/site/images/top-corner-blue.svg'" 
				alt=""
				class="seperator"
				cms:eval="src"	
				/>

			<section class="map">

				<cms:module
					name="articles"
					action="show_group"
					text_id="map"
					template="parts/group_article.xml"
				/>

			</section>	

			<img 
				src="_BASEURL.'/site/images/bottom-corner-blue.svg'" 
				alt=""
				class="seperator"
				cms:eval="src"	
				/>

			<footer>

				<div class="copyright" >
					<span><cms:text constant="copyright"/></span>
				</div>
					
				<img 
					src="_BASEURL.'/site/images/logo-fialkov-digital.svg'"  
					alt="logo-fialkov-digital"
					class="logo"
					cms:eval="src"
					/>
					
			</footer>			

				
		</body>
	</html>
</document>
